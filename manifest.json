{
  "name": "Pic Grabber",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs", 
    "<all_urls>", 
    "background", 
    "http://*/*", 
    "https://*/*"
  ],
  "content_scripts": [{
        "js": ["grabber.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Download pictures from this page.",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.dropbox.com; object-src 'self'"
}
