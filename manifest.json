{
  "name": "Pic Grabber",
  "version": "0.0.0.1",
  "permissions": [
    "activeTab",
    "tabs", 
    "<all_urls>", 
    "background"
  ],
  "content_scripts": [{
        "js": ["grabber.js"],
        "matches": ["<all_urls>"]
    }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Download pictures from this page.",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
